{
  "version": "2.0.0",
  "license": "AGPL-3.0",
  "author": "DeBio Dev Team <debio_dev@blocksphere.id>",
  "homepage": "https://www.debio.network",
  "repository": {
    "type": "git",
    "url": "https://github.com/debionetwork/debio-backend"
  },
  "private": true,
  "scripts": {
    "install:hooks": ".maintain/install-hooks.sh",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "npm run test:unit",
    "test:unit": "jest --config ./test/unit/jest-unit.json",
    "test:watch": "jest --config ./test/unit/jest-unit.json --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/e2e/jest-e2e.json --runInBand",
    "test:e2e:watch": "jest --config ./test/e2e/jest-e2e.json --watch"
  },
  "dependencies": {
    "@aginix/nestjs-gcloud-storage": "^1.2.0",
    "@debionetwork/polkadot-provider": "0.0.10",
    "@elastic/elasticsearch": "^7.14.0",
    "@nestjs-modules/mailer": "^1.6.0",
    "@nestjs-query/query-typeorm": "^0.28.1",
    "@nestjs/common": "^8.0.6",
    "@nestjs/core": "^8.0.0",
    "@nestjs/cqrs": "^8.0.1",
    "@nestjs/elasticsearch": "^8.0.0",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/schedule": "^1.0.2",
    "@nestjs/swagger": "^5.0.9",
    "@nestjs/terminus": "^8.0.3",
    "@nestjs/typeorm": "^8.0.2",
    "@polkadot/api": "^7.8.1",
    "@sentry/node": "^6.16.1",
    "axios": "^0.21.1",
    "axios-mock-adapter": "^1.20.0",
    "cache-manager": "^3.4.4",
    "cache-manager-redis-store": "^2.0.0",
    "class-transformer": "^0.4.0",
    "dotenv": "^8.6.0",
    "ethers": "^5.4.4",
    "fs": "0.0.1-security",
    "handlebars": "^4.7.7",
    "helmet": "^4.6.0",
    "jest-when": "^3.4.2",
    "nestjs-ethers": "^0.3.1",
    "node-mocks-http": "^1.11.0",
    "nodemailer": "^6.6.3",
    "pg": "^8.6.0",
    "postgres": "^1.0.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.2.37"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/cache-manager": "^3.4.2",
    "@types/cron": "^1.7.3",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.0.0",
    "@types/nodemailer": "^6.4.4",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "babel-jest": "^27.5.1",
    "docker-compose": "^0.23.17",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "27.0.6",
    "nodemailer-mock": "^1.5.11",
    "prettier": "^2.3.2",
    "regenerator-runtime": "^0.13.9",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@polkadot/api(.*)$": "<rootDir>/substrate/substrate.service.ts"
    },
    "setupFiles": [
      "dotenv/config"
    ]
  }
}
