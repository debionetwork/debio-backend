{
  "categories": [
    {
      "title": "## 🚀 Features",
      "labels": ["feature", "feat"]
    },
    {
      "title": "## 🐛 Fixes",
      "labels": ["fix", "bug"]
    },
    {
      "title": "## 👌 Improvements",
      "labels": ["refactor", "style", "chore"]
    },
    {
      "title": "## 🤖 Tests",
      "labels": ["test"]
    },
    {
      "title": "## 📖 Documents",
      "labels": ["docs"]
    }
  ],
  "ignore_labels": [
    "ci"
  ],
  "template": "${{CHANGELOG}}\n\n<summary>**Full Changelog**: ${{RELEASE_DIFF}}</summary>",
  "pr_template": "* ${{TITLE}} in #${{NUMBER}}"
}
