{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "moduleNameMapper": {
      "@polkadot/api(.*)$": "<rootDir>@polkadot-api.mock.ts",
      "@polkadot/types/interfaces$": "<rootDir>@polkadot-types-interfaces.mock.ts",
      "@common/*": "<rootDir>/../../src/common",
      "@endpoints/*": "<rootDir>/../../src/endpoints"
    },
    "setupFiles": ["dotenv/config"]
  }
  