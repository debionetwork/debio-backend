{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "moduleNameMapper": {
      "@polkadot/api(.*)$": "<rootDir>../src/substrate/substrate.service.ts",
      "@polkadot/rpc-provider/ws(.*)$": "<rootDir>../src/substrate/substrate.service.ts"
    },
    "setupFiles": ["dotenv/config"]
  }
  